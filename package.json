{
  "name": "excel-builder-vanilla-root",
  "description": "An easy way of building Excel files with javascript",
  "private": true,
  "keywords": [
    "excel",
    "javascript",
    "xlsx",
    "spreadsheet"
  ],
  "author": "Stephen Liberty",
  "contributors": [
    {
      "name": "Ghislain B."
    }
  ],
  "license": "MIT",
  "homepage": "https://github.com/ghiscoding/excel-builder-vanilla",
  "bugs": {
    "url": "https://github.com/ghiscoding/excel-builder-vanilla/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ghiscoding/excel-builder-vanilla.git"
  },
  "scripts": {
    "clean": "rimraf --glob */dist */tsconfig.tsbuildinfo",
    "prebuild": "pnpm run clean && pnpm run biome:write",
    "build": "pnpm -r --stream build",
    "build:demo": "pnpm -r --stream --filter=\"{packages/demo/**}\" build",
    "build:lib": "pnpm -r --stream --filter=\"{packages/excel-builder-vanilla/**}\" build",
    "predev": "pnpm run -r dev:init",
    "dev": "run-p dev:watch build:watch --npm-path pnpm",
    "dev:watch": "pnpm -r --parallel --stream dev",
    "build:watch": "lerna watch --no-bail --file-delimiter=\",\" --glob=\"src/**/*.ts\" -- cross-env-shell pnpm run -r --filter $LERNA_PACKAGE_NAME build:watch --files=$LERNA_FILE_CHANGES",
    "dev:demo": "pnpm -r --stream --filter=\"{packages/demo/**}\" dev",
    "dev:lib": "pnpm -r --stream --filter=\"{packages/excel-builder-vanilla/**}\" dev",
    "biome:check": "biome format ./packages",
    "biome:write": "biome format --write ./packages",
    "preview:version": "lerna version --dry-run",
    "preview:publish": "lerna publish from-package --dry-run",
    "new-version": "lerna version",
    "new-publish": "lerna publish from-package",
    "roll-new-release": "pnpm build && pnpm new-version && pnpm new-publish",
    "serve:demo": "pnpm -r --stream --filter=\"{packages/demo/**}\" dev"
  },
  "packageManager": "pnpm@8.15.1",
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@lerna-lite/cli": "^3.2.1",
    "@lerna-lite/publish": "^3.2.1",
    "@lerna-lite/watch": "^3.2.1",
    "@types/node": "^20.11.16",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "cross-env": "^7.0.3",
    "npm-run-all2": "^6.1.2",
    "pnpm": "^8.15.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  }
}
