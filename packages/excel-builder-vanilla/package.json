{
  "name": "excel-builder-vanilla",
  "version": "3.0.8",
  "description": "An easy way of building Excel files with javascript",
  "keywords": [
    "excel",
    "javascript",
    "xlsx",
    "spreadsheet"
  ],
  "author": "Stephen Liberty",
  "contributors": [
    {
      "name": "Ghislain B."
    }
  ],
  "homepage": "https://github.com/ghiscoding/excel-builder-vanilla",
  "bugs": {
    "url": "https://github.com/ghiscoding/excel-builder-vanilla/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ghiscoding/excel-builder-vanilla.git",
    "directory": "packages/excel-builder-vanilla"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/excel-builder.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/excel-builder.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/excel-builder.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "funding": {
    "type": "ko_fi",
    "url": "https://ko-fi.com/ghiscoding"
  },
  "scripts": {
    "clean": "rimraf dist ../excel-builder-vanilla-types/dist",
    "dev:init": "vite build",
    "dev": "vite build --watch",
    "build": "pnpm clean && vite build",
    "postbuild": "node copy-types.mjs"
  },
  "dependencies": {
    "fflate": "^0.8.2"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "vite-plugin-dts": "^4.2.3"
  }
}